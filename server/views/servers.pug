doctype
html(lang="en")
    head
        include includes/header.pug
        script(src='/js/sidebar.js', defer)
        link(rel='stylesheet', href='/css/servers.css')
        link(rel='stylesheet', href='/css/sidebar.css')
    body
        include includes/sidebar.pug

        #sidebarExtension.bg-dark.closed
            header.text-center.pt-4
                .large-icon.bg-white.round
                    img.round(src=user.avatarUrl(128), alt=user.username)
                h4.pt-2.white #{user.username} 
                    span.text-muted #{'#' + user.discriminator.toString().padStart(4, '0')}

        include includes/navbar.pug
        .container.jumbotron.text-center.bg-transparent
            h1.display-3.white Servers
            hr.white
            p.lead.white Edit your server configuration such as their descriptions and tags!
